<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="id.cikup.couriermanagementsystem.ui.main.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeActivity"
            app:destination="@id/homeActivity" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/left_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/right_out" />
        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgetUsernameFragment"
            app:destination="@id/forgetUsernameFragment" />
        <action
            android:id="@+id/action_loginFragment_to_faqFragment"
            app:destination="@id/faqFragment" />
    </fragment>
    <activity
        android:id="@+id/homeActivity"
        android:name="id.cikup.couriermanagementsystem.HomeActivity"
        android:label="HomeActivity" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="id.cikup.couriermanagementsystem.ui.main.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/left_in"
            app:exitAnim="@anim/right_out"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_homeActivity"
            app:destination="@id/homeActivity" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="id.cikup.couriermanagementsystem.ui.main.forget.ForgetPasswordFragment"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password" >
        <action
            android:id="@+id/action_forgetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgetUsernameFragment"
        android:name="id.cikup.couriermanagementsystem.ui.main.forget.ForgetUsernameFragment"
        android:label="fragment_forget_username"
        tools:layout="@layout/fragment_forget_username" >
        <action
            android:id="@+id/action_forgetUsernameFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/faqFragment"
        android:name="id.cikup.couriermanagementsystem.ui.main.faq.FaqFragment"
        android:label="fragment_faq"
        tools:layout="@layout/fragment_faq" />
</navigation>